<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_login_bkg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_edit_usr"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size48"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="43dp"
            android:background="@drawable/fill_login"
            android:ems="10"
            android:hint="@string/txt_usuario"
            android:inputType="text"
            android:lines="1"
            android:nextFocusDown="@+id/login_edit_pwd"
            android:paddingLeft="@dimen/size16"
            android:textColorHint="@color/WHITE"
            android:textSize="@dimen/size15" >
            
        </EditText>

        <ImageButton
            android:id="@+id/login_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/txt_descripcionimg"
            android:src="@drawable/ic_cancel" />

        <ImageButton
            android:id="@+id/login_btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/size16"
            android:layout_toLeftOf="@+id/login_btn_cancel"
            android:background="@android:color/transparent"
            android:contentDescription="@string/txt_descripcionimg"
            android:src="@drawable/ic_accept" />

        <EditText
            android:id="@+id/login_edit_pwd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size48"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/login_edit_usr"
            android:layout_marginTop="@dimen/size16"
            android:background="@drawable/fill_login"
            android:ems="10"
            android:hint="@string/txt_contrasena"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/size16"
            android:textColorHint="@color/WHITE"
            android:textSize="@dimen/size15" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/login_ic_settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/size16"
        android:layout_marginRight="@dimen/size16"
        android:background="@android:color/transparent"
        android:contentDescription="@string/txt_descripcionimg"
        android:src="@drawable/ic_settings" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/size16"
        android:contentDescription="@string/txt_descripcionimg"
        android:src="@drawable/img_login_header" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:src="@drawable/img_login_logo2" />

</RelativeLayout>